[colors]
background = ${xrdb:color0:#222}
background-alt = #444
foreground = ${xrdb:color7:#efefef}
foreground-alt = #c9f14c
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
grey = #555555

[bar/base]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = #f00
border-size = 2
border-color = #00000000
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 2
; font-0 = fixed:pixelsize=10;1
; font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
; font-2 = siji:pixelsize=10;1
; font-0 = NotoSansMono Nerd Font:pixelsize=12;1
; font-1 = NotoSansMono Nerd Font:pixelsize=10;1
font-0 = Hack Nerd Font:pixelsize=10;1
font-1 = Hack Nerd Font:pixelsize=10;1
font-2 = siji:pixelsize=10;1

; modules-left = bspwm i3
; modules-left = bspwm title
modules-left = ws title
; modules-center = mpd
; modules-center = title
; modules-right = filesystem xbacklight alsa pulseaudio xkeyboard memory cpu wlan eth battery temperature date
modules-right = polypomo system-bluetooth-bluetoothctl updates-arch filesystem pulseaudio xkeyboard memory cpu eth temperature weather date
