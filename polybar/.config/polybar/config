label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25
spacing = 1

mount-0 = /

format-mounted-prefix = " "
format-mounted-prefix-foreground = ${colors.foreground-alt}
format-mounted = <label-mounted>
label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%% of %total%

format-unmounted-prefix = ""
format-unmounted-prefix-foreground = ${colors.foreground-alt}
format-unmounted = <label-unmounted>
label-unmounted = %mountpoint%
; label-unmounted-foreground = ${colors.foreground-alt}
label-unmounted-foreground = ${colors.alert}

click-left = ~/bin/scratchpad ncdu -x /

[module/fs_manjaro]
inherit = module/filesystem
mount-1 = /home
; mount-2 = /mnt/e
; mount-3 = /mnt/data

[module/ws]
type = internal/xworkspaces

format = <label-state>

; label-active = " %index% "
; label-occupied = " %index% "
; label-urgent = " %index% "
; label-empty = " %index% [E] "

; label-monitor = %name%
; ws-icon-0 = code;♚
; ws-icon-1 = office;♛
; ws-icon-2 = graphics;♜
; ws-icon-3 = mail;♝
; ws-icon-4 = web;♞
; ws-icon-default = ♟
; format = <label-state> <label-mode>

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.red}
label-focused-underline= ${colors.alert}
label-focused-padding = 1

label-occupied = %index%
; label-occupied-background = ${colors.lightgreen}
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %index%
; label-empty-foreground = ${colors.foreground-alt}
label-empty-foreground = ${colors.grey}
label-empty-padding = 1

